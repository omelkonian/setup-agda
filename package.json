{
  "name": "setup-agda",
  "version": "0.0.0",
  "private": true,
  "description": "setup agda action",
  "main": "src/setup-agda.ts",
  "scripts": {
    "build": "tsc && npm run ncc",
    "ncc": "ncc build -o dist/haskell src/setup-haskell.ts && ncc build -o dist/agda src/setup-agda.ts",
    "test": "jest --coverage",
    "lint": "eslint **/*.ts --cache",
    "lint-fix": "eslint **/*.ts --cache --fix",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omelkonian/setup-agda.git"
  },
  "keywords": [
    "actions",
    "agda",
    "setup"
  ],
  "author": "Orestis Melkonian",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^1.0.4",
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.1",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.1",
    "@expo/spawn-async": "^1.5.0",
    "@jamesives/github-pages-deploy-action": "^3.7.1",
    "fs-extra": "^9.0.1",
    "js-yaml": "^3.14.0",
    "setup-haskell-npm": "^0.1.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.14.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^23.20.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
